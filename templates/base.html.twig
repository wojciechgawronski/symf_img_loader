<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
        <div class="container mb-3">
            <nav class="d-flex justify-content-between">
                <ul class="nav mt-2">
                    <li class="nav-item">
                        <a class="nav-link ps-0 text-warning" href="{{ path('index') }}">
                            <i class="far fa-image"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'index' %}text-warning{% endif %}" aria-current="page" href="{{ path('index') }}">Start</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'new_photos' %}text-warning{% endif %}" href="{{ path('new_photos') }}">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'photos' %}text-warning{% endif %}" href="#">Photos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'photos' %}text-warning{% endif %}" href="#">My Photos</a>
                    </li>
                </ul>
                <ul class="nav mt-2">
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Log <span class="text-warning fw-bold">Out</span></a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Log <span class="text-warning fw-bold">In</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link pe-0" href="{{ path('app_register') }}">Register</a>
                    </li>
                    {% endif %}

                </ul>
            </nav>
            <hr class="mt-2 mb-4">
            <div class="bg-light p-2 text-center text-dark">
                <h1 class="display-4">Hello world!</h1>
                <p class="lead">Login or Register and upload some photos..</p>
            </div>
        </div>
    </header>

    {% block content %}{% endblock %}

    <footer>
        <div class="container">
            <hr>
            <p class="text-center small">&copy; 2021</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </body>
</html>
